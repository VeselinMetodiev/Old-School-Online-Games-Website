<!DOCTYPE html>
<html lang="en">
  <%- include('includes/head') %>
  <body>
    <div class="container">
      <%- include('includes/header') %>
      <div class="content-wrapper-register">
        <% if (typeof errors !== "undefined" && errors.length) { %>
        <ul class="errors">
          <% errors.forEach(e => { %>
          <li><%= e %></li>
          <% }) %>
        </ul>
        <% } %>
        <h2 class="register-title">Регистрация</h2>
        <form class="register-form" action="/register" method="post">
          <div class="form-row">
            <label for="username">Потребителско име:</label>
            <div class="input-container">
              <input type="text" id="username" name="username" />
            </div>
          </div>
          <div class="form-row">
            <label for="password">Парола:</label>
            <div class="input-container">
              <input type="password" id="password" name="password" />
            </div>
          </div>
          <div class="form-row">
            <label for="password-repeat">Повтори парола:</label>
            <div class="input-container">
              <input
                type="password"
                id="password-repeat"
                name="password-repeat"
              />
            </div>
          </div>
          <div class="form-row">
            <label for="email">Електронна поща:</label>
            <div class="input-container">
              <input type="email" id="email" name="email" />
            </div>
          </div>

          <div class="form-terms">
            <label>
              <input type="checkbox" name="terms" /> Съгласен съм с
              <a href="#">условията за ползване</a>
            </label>
          </div>
          <button type="submit" class="form-button">Регистрация</button>
        </form>
        <div class="login-link-container">
          <a href="#">Вход в системата</a>
        </div>
      </div>

      <%- include('includes/footer') %>
    </div>
  </body>
</html>
